extends ../../layouts/adminLayout.pug
include ../../mixins/imageUpload.pug


block content
  .container.mt-5
    h1.mb-4 Actualizaci√≥n de Item

    form#updateForm.needs-validation(novalidate)
      .row
        .col-md-6.mb-3
          +imageUpload('fileItem', 'Imagen', 'itemPreview', 'itemUrl', item.img )
      
      .mb-3
        label.form-label(for="text") Texto:
        textarea.form-control(id="text" name="text" rows="3" required)= item.text
      
      .mb-3
        label.form-label(for="enable") Enable:
        select.form-select(id="enable" name="enable" required)
          option(value="true" selected=item.enable) True
          option(value="false" selected=!item.enable) False
      
      .spinner-container(style="display:none; text-align: center; margin-top: 20px;")
      input(type="hidden" id="itemId" name="itemId" value=item.id)
      
      button.btn.btn-primary(type="button" id="submitButton") Actualizar
      a.btn.btn-primary(href=`/admin/item/${item.id}`) Volver
      
    script( src="/js/adminEdition/itemUpdate.js")